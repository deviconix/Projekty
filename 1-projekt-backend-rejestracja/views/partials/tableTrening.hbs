<table class='table table-striped table-hover'>
  <thead class='table-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Name</th>
      <th scope='col'>Kurs</th>
      <th scope='col'>Place</th>
      <th scope='col'>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#if trainings}}

      {{#each trainings}}
        <tr>
          <th scope='row'>{{indexInc @index}}</th>
          <td>{{fullname}}</td>
          <td>{{training}}</td>
          <td>{{place}}</td>
          <td><a
              class='btn btn-outline-danger'
              href='/form-registration/delete/{{_id}}'
            >drop
            </a></td>
        </tr>
      {{/each}}
    {{/if}}

  </tbody>
</table>